<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hz.gather.master.core.mapper.VirtualCoinPriceMapper">




    <!-- 定义数据库基本列,只适用代替单表的*-->
    <sql id="Base_Column_List">
        a.id,a.alias_name,a.exchange_explain,a.exchange_price,a.tallest_price,a.max_price,a.min_price,a.curday,a.check_status,a.remark,
        a.create_time,a.update_time,a.yn
    </sql>

    <!-- 查询条件 -->
    <sql id="Example_Where_Clause">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            <if test="curday != null and curday != '' " >
                and a.curday = #{curday}
            </if>
            <if test="curdayStart != null and curdayStart != '' and curdayEnd != null and curdayEnd != '' " >
                and a.curday >= #{curdayStart} and a.curday &lt;= #{curdayEnd}
            </if>
            and a.check_status = 2
            and a.yn = 0

        </trim>
    </sql>

    <!-- 查询条件_id -->
    <sql id="Example_Where_Clause_id">
        where 1=1
        <trim  suffixOverrides="," >
            <if test="id != null and id != '' " >
                and a.id = #{id}
            </if>
            and a.yn =  0
        </trim>
    </sql>


    <!-- 显示所有数据 -->
    <select id="findAll" resultType="com.hz.gather.master.core.model.price.VirtualCoinPriceModel">
        select
        <include refid="Base_Column_List" />
        from tb_gd_virtual_coin_price a
        <include refid="Example_Where_Clause"/>
    </select>

    <!-- 查询列表 -->
    <select id="findByCondition" parameterType="Object" resultType="com.hz.gather.master.core.model.price.VirtualCoinPriceModel">
        select
        <include refid="Base_Column_List" />
        from tb_gd_virtual_coin_price a
        <include refid="Example_Where_Clause"/>
        ORDER BY a.create_time DESC
    </select>

    <!-- 根据条件查询信息-->
    <select id="findByObject" parameterType="Object" resultType="com.hz.gather.master.core.model.price.VirtualCoinPriceModel">
        select
        <include refid="Base_Column_List" />
        from tb_gd_virtual_coin_price a
        <include refid="Example_Where_Clause"/>
        limit 1
    </select>

    <!-- 根据id查询信息-->
    <select id="findById" parameterType="java.lang.Long" resultType="com.hz.gather.master.core.model.price.VirtualCoinPriceModel">
        select
        <include refid="Base_Column_List" />
        from tb_gd_virtual_coin_price a
        <include refid="Example_Where_Clause_id"/>
    </select>


    <!-- 添加基本信息 -->
    <insert id="add" parameterType="com.hz.gather.master.core.model.price.VirtualCoinPriceModel" >
        <!--<selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">-->
        <!--SELECT LAST_INSERT_ID() as id-->
        <!--</selectKey>-->
        insert into tb_gd_virtual_coin_price
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="aliasName != null and aliasName != '' " >
                alias_name,
            </if>
            <if test="exchangeExplain != null and exchangeExplain != '' " >
                exchange_explain,
            </if>
            <if test="exchangePrice != null and exchangePrice != '' " >
                exchange_price,
            </if>
            <if test="tallestPrice != null and tallestPrice != '' " >
                tallest_price,
            </if>
            <if test="maxPrice != null and maxPrice != '' " >
                max_price,
            </if>
            <if test="minPrice != null and minPrice != '' " >
                min_price,
            </if>
            <if test="curday != null and curday != '' " >
                curday,
            </if>
            <if test="checkStatus != null and checkStatus != '' " >
                check_status,
            </if>
            <if test="remark != null and remark != '' " >
                remark,
            </if>
            create_time,
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="aliasName != null and aliasName != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            <if test="exchangeExplain != null and exchangeExplain != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            <if test="exchangePrice != null and exchangePrice != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            <if test="tallestPrice != null and tallestPrice != '' " >
                <![CDATA[  #{tallestPrice}, ]]>
            </if>
            <if test="maxPrice != null and maxPrice != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            <if test="minPrice != null and minPrice != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            <if test="curday != null and curday != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            <if test="checkStatus != null and checkStatus != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            <if test="remark != null and remark != '' " >
                <![CDATA[  #{stgName}, ]]>
            </if>
            NOW(),
        </trim>
    </insert>

    <!-- 更新基本信息 -->
    <update id="update" parameterType="com.hz.gather.master.core.model.price.VirtualCoinPriceModel">
        UPDATE tb_gd_virtual_coin_price a
        <trim prefix="set" suffixOverrides=",">
            <if test="aliasName != null and aliasName != '' " >
                a.alias_name = #{aliasName},
            </if>
            <if test="exchangeExplain != null and exchangeExplain != '' " >
                a.exchange_explain = #{exchangeExplain},
            </if>
            <if test="exchangePrice != null and exchangePrice != '' " >
                a.exchange_price = #{exchangePrice},
            </if>
            <if test="tallestPrice != null and tallestPrice != '' " >
                a.tallest_price = #{tallestPrice},
            </if>
            <if test="maxPrice != null and maxPrice != '' " >
                a.max_price = #{maxPrice},
            </if>
            <if test="minPrice != null and minPrice != '' " >
                a.min_price = #{minPrice},
            </if>
            <if test="curday != null and curday != '' " >
                a.curday = #{curday},
            </if>
            <if test="checkStatus != null and checkStatus != '' " >
                a.check_status = #{checkStatus},
            </if>
            <if test="remark != null and remark != '' " >
                a.remark = #{remark},
            </if>
            a.update_time = NOW(),
        </trim>
        <include refid="Example_Where_Clause"/>
    </update>

    <!-- 主要作用1.逻辑删除，2更新状态 -->
    <update id="manyOperation" parameterType="Object">
        update tb_gd_virtual_coin_price a
        <trim prefix="set" suffixOverrides=",">
            <if test="yn != 0 and yn >0 " >
                a.yn = #{yn},
            </if>
        </trim>
        <include refid="Example_Where_Clause_id"/>
    </update>





</mapper>